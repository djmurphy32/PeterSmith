{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["import", "prettier"],
  "extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "standard", "prettier"],
  "env": {
    "jest": true
  },
  "globals": {
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
    "object-shorthand": [
      "error",
      "always",
      {
        "avoidQuotes": true,
        "ignoreConstructors": true
      }
    ],
    "no-console": "warn"
  }
}
